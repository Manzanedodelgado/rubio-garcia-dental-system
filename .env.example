# Rubio Garc√≠a Dental Management System - Environment Configuration
# Copy this file to .env.local and fill in your actual values

# ========================================
# SUPABASE CONFIGURATION
# ========================================
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ========================================
# SQL SERVER 2008 - GESDEN INTEGRATION
# ========================================
SQLSERVER_HOST=your_sql_server_host
SQLSERVER_DATABASE=your_database_name
SQLSERVER_USER=your_sql_username
SQLSERVER_PASSWORD=your_sql_password
SQLSERVER_PORT=1433

# ========================================
# GESDEN-SUPABASE SYNCHRONIZATION
# ========================================
GESDEN_AUTO_SYNC=true
GESDEN_SYNC_INTERVAL=5000
GESDEN_CONFLICT_RESOLUTION=timestamp

# ========================================
# WHATSAPP BAILEYS INTEGRATION
# ========================================
BAILEYS_SESSION_PATH=./whatsapp_auth
WHATSAPP_AUTO_CONNECT=false
WHATSAPP_DEBUG=true

# ========================================
# AI/OLLAMA INTEGRATION
# ========================================
LLM_HOST=http://localhost:11434
AI_ENABLED=true
AI_DEBUG=true

# ========================================
# GOOGLE MAIL INTEGRATION
# ========================================
NEXT_PUBLIC_GOOGLE_MAIL_CLIENT_ID=your_google_client_id
GOOGLE_MAIL_CLIENT_SECRET=your_google_client_secret
GOOGLE_MAIL_REFRESH_TOKEN=your_google_refresh_token

# ========================================
# ADMIN CONFIGURATION
# ========================================
ADMIN_EMAIL=info@rubiogarciadental.com

# ========================================
# MONITORING & DEBUG
# ========================================
DEBUG=true
LOG_LEVEL=debug
MONITORING_ENABLED=true